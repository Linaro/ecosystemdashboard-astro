---
import { getCollection } from "astro:content";
import ProjectListing from "./ProjectListing.astro";
const { item, posts } = Astro.props;
---

<div
  class="text-center bg-blue d-flex flex-column justify-content-center align-items-center"
>
  <div class="faded-line"></div>
  <p class="text-2xl mb-16">{item.label}</p>
  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-10 px-3 py-3"
  >
    {
      posts &&
        posts.map(
          (post: { data: { project: { title: string; logo: string } } }) => (
            <ProjectListing post={post} />
          ),
        )
    }
  </div>
</div>
